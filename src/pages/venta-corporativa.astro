---
import { Formulario } from "../components/VentaCorpComponents/Formulario"
import Layout from "../layouts/Layout.astro"

---
<Layout title="DecoStudio - Venta Corporativa">
   <section class="mb-6">
      <div class='max-w-[1100px] mx-auto lg:px-12 sm:px-16 px-6'>
         <div class='grid grid-cols-2 py-4 gap-8 mt-4 lg:gap-12 lg:mt-8'>
            <div class="bg-zinc-200 p-4 col-span-2 lg:col-span-1">
               <h4 class='font-bold text-xl text-center'>SEPARA TU CITA</h4>
               <Formulario client:visible />
            </div>
            <div class="col-span-2 lg:col-span-1 flex flex-col justify-center">
               <h3 class="text-green-600 font-semibold text-2xl lg:text-4xl text-center">ACCEDE A:</h3>
               <ul class="flex flex-col mx-auto gap-2 mt-3 lg:gap-4">
                  <li class="flex items-center justify-center text-lg lg:text-2xl"><ion-icon class="text-3xl" name="cash-outline"></ion-icon>&nbsp;&nbsp;PRECIOS POR VOLUMEN</li>
                  <li class="flex items-center justify-center text-lg lg:text-2xl"><ion-icon class="text-3xl" name="eye-outline"></ion-icon>&nbsp;&nbsp;MODELOS EXCLUSIVOS</li>
                  <li class="flex items-center justify-center text-lg lg:text-2xl"><ion-icon class="text-3xl" name="people-circle-outline"></ion-icon>&nbsp;&nbsp;ASESOR√çA ESPECIALIZADA</li>
                  <li class="flex items-center justify-center text-lg lg:text-2xl"><ion-icon class="text-3xl" name="shield-checkmark"></ion-icon>&nbsp;&nbsp;PRODUCTOS DE ALTA CALIDAD</li>
               </ul>
            </div>
         </div>
      </div>
   </section>
</Layout>