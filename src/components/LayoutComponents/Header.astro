---

interface NavigatonMenu {
   path: string
   label: string
}

const navigatonMenu: NavigatonMenu[] = [
   { path: '/', label: 'INICIO' },
   { path: '/nosotros', label: 'NOSOTROS' },
   { path: '/productos', label: 'PRODUCTOS' },
   { path: '/venta-corporativa', label: 'VENTA CORPORATIVA' },
]
---

<header class='bg-black'>
   <div class='flex flex-col'>
      <div class='flex justify-between items-center w-[90%] mx-auto py-3'>
         <img class='w-32' src='/logo_blanco.png'/>
         <div class='flex items-center gap-3'>
            <span class="hidden md:flex text-white text-sm"><b>CONTACTO:</b>&nbsp;<a href="tel:+51933419882">+51 933 419 882</a>&nbsp;|&nbsp;<a href="tel:+51999881068">+51 999 881 068</a></span>
            <a href="/lista-de-deseos"><ion-icon name="heart" class="text-white text-2xl cursor-pointer"></ion-icon></a>
            <a href="/carrito"><ion-icon name="cart" class="text-white text-2xl cursor-pointer"></ion-icon></a>
            <ion-icon id="menuButton" name="menu" class="md:hidden text-white text-2xl cursor-pointer"></ion-icon>
         </div>
      </div>
      <nav id="navBar" class='bg-neutral-300 md:py-3 py-0 md:static absolute md:min-h-fit min-h-auto left-0 top-[-250px] md:top-[87px] w-full flex md:justify-center items-center md:px-5'>
         <div class='md:flex md:flex-row md:justify-center md:items-center md:gap-[80px] w-full gap-4'>
            {
               navigatonMenu.map(({ path, label }) => (
                  <a  href={ path } class='block text-gray-800 font-semibold md:px-0 px-6 md:py-0 py-3 md:w-auto w-screen md:hover:bg-neutral-300 hover:bg-neutral-400'>{ label }</a>
               ))
            }
         </div>
      </nav>
   </div>
</header>

<script>

   const navBar = document.querySelector('#navBar')
   const menuButton = document.querySelector('#menuButton')

   menuButton?.addEventListener('click', ( event: any ) => {

      const { name } = event.target
      event.target.name = name === 'menu' ? 'close' : 'menu'

      if ( navBar ) {  
         navBar.className = name === 'menu'
                           ? 'bg-neutral-300 md:py-3 py-0 md:static absolute md:min-h-fit min-h-auto left-0 top-[110px] md:top-[87px] w-full flex md:justify-center items-center md:px-5'
                           : 'bg-neutral-300 md:py-3 py-0 md:static absolute md:min-h-fit min-h-auto left-0 top-[-250px] md:top-[87px] w-full flex md:justify-center items-center md:px-5' 
      }

   })

</script>